{
  "name": "ticketmaster",
  "version": "1.0.0",
  "description": "a backend API that allows users to view events and book tickets while handling high traffic.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HadiAbu/TicketMaster.git"
  },
  "author": "hadiabu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HadiAbu/TicketMaster/issues"
  },
  "homepage": "https://github.com/HadiAbu/TicketMaster#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@prisma/client": "^4.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "express": "^4.18.2",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "prisma": "^4.16.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/**/*.ts"
    ]
  }
}
